<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <include layout="@layout/view_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include layout="@layout/view_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include layout="@layout/view_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/sub_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/f2mcolor"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@mipmap/profile"
                    android:tint="@color/white"/>
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="22dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:text="Contact Information"
                    android:textColor="@color/f2mcolor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:text="First Name"
                    android:textColor="@color/f2mcolor"/>
                <TextView
                    android:id="@+id/firstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:text="Aiswarya"
                    android:layout_gravity="center"
                    android:textColor="@color/colorGrayDark"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Last Name"
                    android:textColor="@color/f2mcolor"/>
                <TextView
                    android:id="@+id/lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:text="Saju"
                    android:layout_gravity="center"
                    android:textColor="@color/colorGrayDark"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Email"
                    android:textColor="@color/f2mcolor"/>
                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:text="aiswarya.smacon@gmail.com"
                    android:layout_gravity="center"
                    android:textColor="@color/colorGrayDark"/>
                <TextView
                    android:id="@+id/mobile_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Mobile"
                    android:textColor="@color/f2mcolor"/>
                <TextView
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:text="8891467788"
                    android:layout_gravity="center"
                    android:textColor="@color/colorGrayDark"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Address"
                    android:textColor="@color/f2mcolor"/>
                <TextView
                    android:id="@+id/company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center"
                    android:textColor="@color/colorGrayDark"/>
                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:text="8891467788"
                    android:layout_gravity="center"
                    android:textColor="@color/colorGrayDark"/>
                <TextView
                    android:id="@+id/changepassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    android:layout_margin="10dp"
                    android:text="Change Password"
                    android:textColor="@color/colorAccentsecond"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <com.smacon.f2mlibrary.Button.FloatingActionButton
        android:id="@+id/fab_edit"
        android:visibility="gone"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_edit_dark"
        android:tint="@color/white"
        android:layout_margin="10dp"
        android:layout_gravity="right|bottom"
        style="@style/FloatingButtonStyle" />
</FrameLayout>