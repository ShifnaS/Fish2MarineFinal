<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:background="@android:color/transparent">

    <android.support.v7.widget.CardView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="16dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@android:color/white"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/relativelayout1">
                <ImageView
                    android:id="@+id/gifImageView"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/ic_place"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativelayout1">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:gravity="center"
                        android:id="@+id/title"
                        android:textAlignment="center"
                        android:text="Choose Your Location"
                        />
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/txt_name"
                        android:layout_below="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintAnimationEnabled="true"
                        android:layout_marginTop="16dp"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:textColorHint="@color/colorPrimary"
                        android:hint="Location">
                        <AutoCompleteTextView
                            android:id="@+id/searched_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorGrayDark"
                            android:textSize="@dimen/normal_text_size"
                            android:textColorHint="@color/colorGray"
                            android:maxLines="1"
                            android:cursorVisible="true"
                            android:inputType="textCapWords"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:src="@drawable/powered_by_google_light" />
                    </android.support.design.widget.TextInputLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_name"
                        android:orientation="horizontal"
                        android:weightSum="100"
                        android:layout_marginTop="32dp">
                        <Button
                            android:id="@+id/btn_ok"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:textAllCaps="false"
                            android:text="Ok"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/f2mcolor"
                            android:textColor="#ffffff"/>
                    </LinearLayout>
                    <FrameLayout
                        android:id="@+id/layout_indicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_name"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="100"
                        android:layout_marginTop="32dp">
                        <com.smacon.f2mlibrary.Progress.AVLoadingIndicatorView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/indicator"
                            app:indicator="BallGridPulse"
                            app:indicator_color="@color/f2mcolor"
                            android:layout_gravity="center"
                            android:gravity="center">
                        </com.smacon.f2mlibrary.Progress.AVLoadingIndicatorView>
                    </FrameLayout>
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>