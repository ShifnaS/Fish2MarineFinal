<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbar"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/menupading"
            android:src="@mipmap/ic_launcher_round"/>
        <TextView
            android:id="@+id/mTitle"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
        <com.smacon.f2mlibrary.Progress.AVLoadingIndicatorView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/loading"
            app:indicator="BallGridPulse"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            app:indicator_color="@color/white"/>
        <ImageView
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:gravity="center|right"
            android:padding="@dimen/menupading"
            android:src="@mipmap/ic_launcher"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:padding="20dp">
        <com.smacon.f2mlibrary.Edittext.MaterialEditText
            android:id="@+id/addDesignation"
            style="@style/edittext_loginstyle"
            android:hint="Designation"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:text=""
            app:met_floatingLabel="highlight"
            app:met_helperText=""
            app:met_singleLineEllipsis="true"
            app:met_baseColor="#aa2b00"
            app:met_primaryColor="#aa2b00"
            app:met_underlineColor="#aa2b00"/>
    </LinearLayout>

</LinearLayout>