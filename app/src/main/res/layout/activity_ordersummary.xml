<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/f2mcolor">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/menupading"
                android:src="@mipmap/ic_backarrow"/>
            <TextView
                android:id="@+id/mTitle"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Order Summary"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/view_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"/>

    <include layout="@layout/view_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"/>

    <include layout="@layout/view_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"/>
    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:id="@+id/sub_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:id="@+id/cardview"
                    style="@style/list_CardView"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="3dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:gravity="left"
                                android:textColor="@color/colorGrayDark"
                                android:textSize="22dp"
                                android:text="Sub Total"/>
                            <TextView
                                android:id="@+id/CartTotal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Rs. 150"
                                android:textColor="@color/colorGrayDark"
                                android:textSize="22dp"
                                android:layout_gravity="right"
                                android:gravity="right"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:gravity="left"
                                android:textColor="@color/colorGrayDark"
                                android:textSize="22dp"
                                android:text="Shipping"/>
                            <TextView
                                android:id="@+id/Shipping"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Rs. 150"
                                android:textColor="@color/colorGrayDark"
                                android:textSize="22dp"
                                android:layout_gravity="right"
                                android:gravity="right"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:gravity="left"
                                android:textColor="@color/colorGrayDark"
                                android:textSize="22dp"
                                android:text="Tax"/>
                            <TextView
                                android:id="@+id/Taxamount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Rs. 150"
                                android:textColor="@color/colorGrayDark"
                                android:textSize="22dp"
                                android:layout_gravity="right"
                                android:gravity="right"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:gravity="left"
                                android:textColor="@color/colorGrayDark"
                                android:textSize="22dp"
                                android:text="Discount"/>
                            <TextView
                                android:id="@+id/Discount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Rs. 150"
                                android:textColor="@color/colorGrayDark"
                                android:textSize="22dp"
                                android:layout_gravity="right"
                                android:gravity="right"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:background="#c0c0c0" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:gravity="left"
                                android:textColor="@color/colorGrayDark"
                                android:textSize="25dp"
                                android:textStyle="bold"
                                android:text="Order Total"/>
                            <TextView
                                android:id="@+id/OrderTotal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Rs. 150"
                                android:textColor="@color/colorGrayDark"
                                android:textSize="25dp"
                                android:textStyle="bold"
                                android:layout_gravity="right"
                                android:gravity="right"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_margin="8dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/itemcount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:gravity="left"
                                android:textColor="@color/colorGrayDark"
                                android:textSize="20dp"
                                android:layout_marginBottom="5dp"
                                android:text="2 Items in Cart"/>
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:background="#c0c0c0"
                                android:layout_marginBottom="8dp"/>
                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/mrecyclerview"
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/cardview1"
                    style="@style/list_CardView"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="3dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:textColor="@color/colorGrayDark"
                            android:textSize="25dp"
                            android:textStyle="bold"
                            android:text="Shipping Information"/>

                        <TextView
                            android:id="@+id/shippingmethod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:textColor="@color/colorGrayDark"
                            android:textSize="22dp"
                            android:padding="5dp"
                            android:text="Free Shipping"/>
                        <TextView
                            android:id="@+id/deliverydate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:padding="5dp"
                            android:textColor="@color/colorGrayDark"
                            android:textSize="22dp"
                            android:text="Delivery Date:"/>
                        <TextView
                            android:id="@+id/deliveryslot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:padding="5dp"
                            android:textColor="@color/colorGrayDark"
                            android:textSize="22dp"
                            android:text="Delivery Slot"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:padding="5dp"
                            android:textColor="@color/colorGrayDark"
                            android:textSize="22dp"
                            android:text="Ship To: "/>
                        <TextView
                            android:id="@+id/shipaddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:padding="5dp"
                            android:maxLines="6"
                            android:textColor="@color/colorGrayDark"
                            android:textSize="22dp"
                            android:text="Ship To: "/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:textColor="@color/colorGrayDark"
                            android:textSize="22dp"
                            android:visibility="invisible"
                            android:text="Ship To: "/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:padding="5dp"
                            android:text="gggggggg"
                            android:visibility="invisible"
                            android:textColor="@color/colorGrayDark"
                            android:textSize="22dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <Button
        android:id="@+id/placeorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Place Order"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:gravity="center"
        android:background="@color/f2mcolor"/>
</FrameLayout>