<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/f2mcolor">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Checkout"
                android:textColor="@color/white"
                android:textSize="20dp"/>
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:paddingTop="@dimen/menupading"
                android:paddingBottom="@dimen/menupading"
                android:paddingRight="@dimen/menupading"
                android:src="@mipmap/ic_backarrow"/>
        </FrameLayout>
    </android.support.v7.widget.Toolbar>
    <include layout="@layout/view_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"/>

    <include layout="@layout/view_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"/>

    <include layout="@layout/view_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:fillViewport="true">
        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/step1"
                        android:layout_gravity="center"
                        android:tint="@color/f2mcolor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Address"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <View
                        android:layout_width="90dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:background="#a40404" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/step1"
                        android:tint="@color/f2mcolor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:maxLines="2"
                        android:text="Deliver slot"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <View
                        android:layout_width="90dp"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center"
                        android:background="#a40404" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/step1"
                        android:tint="@color/f2mcolor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Payment"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sub_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/lay_delivery_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_small"
                    android:layout_gravity="center_vertical"
                    android:paddingBottom="@dimen/padding_small"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/padding_small">

                    <com.smacon.f2mlibrary.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorGrayDark"
                        android:text="Choose Delivery Address" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:drawable/divider_horizontal_bright"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <com.smacon.f2mlibrary.CustomTextView
                                android:id="@+id/txt_address_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/colorGrayDark"
                                android:textSize="@dimen/normal_text_size"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:padding="5dp"/>
                            <ImageView
                                android:id="@+id/address_list"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_edit_dark"
                                android:tint="@color/black"
                                android:textColor="@color/colorGray"
                                android:textSize="20sp"
                                android:layout_gravity="right"
                                android:padding="@dimen/padding"
                                android:clickable="true"
                                android:background="?selectableItemBackground"/>
                        </LinearLayout>
                        <com.smacon.f2mlibrary.CustomTextView
                            android:id="@+id/txt_company"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/normal_text_size"
                            android:layout_marginLeft="5dp"/>
                        <com.smacon.f2mlibrary.CustomTextView
                            android:id="@+id/txt_street"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/normal_text_size"
                            android:layout_marginLeft="5dp"/>
                        <com.smacon.f2mlibrary.CustomTextView
                            android:id="@+id/txt_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/normal_text_size"
                            android:layout_marginLeft="5dp"/>
                        <com.smacon.f2mlibrary.CustomTextView
                            android:id="@+id/txt_state_pin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/normal_text_size"
                            android:layout_marginLeft="5dp"/>
                        <com.smacon.f2mlibrary.CustomTextView
                            android:id="@+id/txt_country"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/normal_text_size"
                            android:layout_marginLeft="5dp"/>
                        <com.smacon.f2mlibrary.CustomTextView
                            android:id="@+id/txt_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/normal_text_size"
                            android:layout_marginLeft="5dp"/>
                        <com.smacon.f2mlibrary.CustomTextView
                            android:id="@+id/txt_new_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add New Address"
                            android:textColor="@color/white"
                            android:textSize="@dimen/normal_text_size"
                            android:padding="@dimen/padding"
                            android:clickable="true"
                            android:layout_margin="10dp"
                            android:background="@color/f2mcolor"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lay_shipping_method"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_small"
                    android:background="@color/white"
                    android:layout_gravity="center_vertical"
                    android:paddingBottom="@dimen/padding_small"
                    android:layout_marginTop="@dimen/padding_small">
                    <com.smacon.f2mlibrary.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorGrayDark"
                        android:text="Shipping Method" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:drawable/divider_horizontal_bright"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="10dp">
                        <ListView
                            android:id="@+id/shippingListView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <FrameLayout
                            android:id="@+id/shipping_indicator"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:visibility="gone">
                            <com.smacon.f2mlibrary.Progress.AVLoadingIndicatorView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:id="@+id/indicator"
                                android:layout_gravity="center"
                                app:indicator="BallGridPulse"
                                app:indicator_color="#416DFE"/>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lay_delivery_slots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_small"
                    android:layout_gravity="center_vertical"
                    android:paddingBottom="@dimen/padding_small"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/padding_small"
                    android:visibility="gone">
                    <com.smacon.f2mlibrary.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorGrayDark"
                        android:text="Choose Delivery Address" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:drawable/divider_horizontal_bright"/>
                    <LinearLayout
                        android:id="@+id/LinearLayoutMain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="10dp">
                        <RadioGroup
                            android:id="@+id/radiogroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center">
                        </RadioGroup>
                        <FrameLayout
                            android:id="@+id/deliveryslot_indicator"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:visibility="visible">
                            <com.smacon.f2mlibrary.Progress.AVLoadingIndicatorView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:id="@+id/deliveryslotindicator"
                                android:layout_gravity="center"
                                app:indicator="BallGridPulse"
                                app:indicator_color="#416DFE"/>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lay_payment_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_small"
                    android:layout_gravity="center_vertical"
                    android:paddingBottom="@dimen/padding_small"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/padding_small"
                    android:visibility="gone">
                    <com.smacon.f2mlibrary.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorGrayDark"
                        android:text="Choose Payment" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:drawable/divider_horizontal_bright"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="10dp">
                        <RadioGroup
                            android:id="@+id/paymentradiogroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">
                        </RadioGroup>
                        <FrameLayout
                            android:id="@+id/payment_indicator"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:visibility="visible">
                            <com.smacon.f2mlibrary.Progress.AVLoadingIndicatorView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:id="@+id/paymentindicator"
                                android:layout_gravity="center"
                                app:indicator="BallGridPulse"
                                app:indicator_color="#416DFE"/>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Order SUMMARY"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:gravity="center"
        android:background="@color/f2mcolor"/>
</FrameLayout>