<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:background="@drawable/login_gif_background">
    <ImageView
        android:id="@+id/login_gif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:scaleType="fitXY"
        android:layout_gravity="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="visible"
                android:src="@drawable/f2mlogo"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="5dp">
                <com.google.android.gms.common.SignInButton
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/sign_in_button"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:colorScheme="light" />
                <Space
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />
                <com.facebook.login.widget.LoginButton
                    xmlns:facebook="http://schemas.android.com/apk/res-auto"
                    facebook:com_facebook_login_text="Sign in"
                    android:id="@+id/login_button"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="3dp"
                    android:paddingBottom="11dp"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:text="OR"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_marginTop="8dp"
                android:orientation="vertical">
                <com.smacon.f2mlibrary.Edittext.MaterialEditText
                    android:id="@+id/username"
                    style="@style/edittext_loginstyle"
                    android:hint="Email"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:inputType="textEmailAddress"
                    android:text=""
                    app:met_floatingLabel="highlight"
                    app:met_helperText=""
                    app:met_singleLineEllipsis="true"
                    app:met_textColorHint="@color/colorPrimary"
                    app:met_baseColor="@color/colorPrimaryDark"
                    app:met_primaryColor="@color/colorPrimaryDark"
                    app:met_underlineColor="@color/colorPrimary"/>
                <RelativeLayout
                    style="@style/edittext_loginstyle">
                    <com.smacon.f2mlibrary.Edittext.MaterialEditText
                        android:id="@+id/password"
                        style="@style/edittext_pwdstyle"
                        android:hint="Password"
                        android:imeOptions="actionGo"
                        android:singleLine="true"
                        android:layout_marginTop="14dp"
                        android:inputType="textPassword"
                        android:text=""
                        app:met_floatingLabel="highlight"
                        app:met_helperText=""
                        app:met_singleLineEllipsis="true"
                        app:met_textColorHint="@color/colorPrimary"
                        app:met_baseColor="@color/colorPrimaryDark"
                        app:met_primaryColor="@color/colorPrimaryDark"
                        app:met_underlineColor="@color/colorPrimary"
                        android:layout_marginBottom="5dp"/>
                    <ToggleButton
                        android:id="@+id/mpwdtoggle"
                        android:layout_height="@dimen/visible"
                        android:layout_width="@dimen/visible"
                        android:background="@drawable/button_toggle"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="@dimen/padding"
                        android:layout_marginEnd="@dimen/padding"
                        android:layout_centerVertical="true"
                        android:textOn=""
                        android:textOff=""
                        android:buttonTint="@color/black"
                        android:focusable="false"
                        android:focusableInTouchMode="false"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rememberlayout"
                style="@style/rememberlayout">
                <com.smacon.f2mlibrary.CheckBox
                    android:id="@+id/rememberpwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:check_style="hook"
                    app:check_text=""
                    android:paddingBottom="2dp"
                    app:show_border="true"
                    app:is_circle_border="false"
                    app:color_before="@color/colorPrimaryDark"
                    app:color_after="@color/colorPrimaryDark"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/remember"
                    android:text="Remember me"/>
                <TextView
                    android:id="@+id/forgotpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:textSize="@dimen/remember"
                    android:text="Forgot Password?"/>
            </LinearLayout>
            <LinearLayout
                style="@style/layoutmatchwrap"
                android:orientation="horizontal"
                android:gravity="center">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/buttonLogin"
                        style="@style/loginbutton"
                        android:text="Login"
                        android:background="@drawable/button_login"/>
                    <com.smacon.f2mlibrary.Progress.AVLoadingIndicatorView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/indicator"
                        android:visibility="invisible"
                        app:indicator="BallGridPulse"
                        app:indicator_color="#416DFE"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|center"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Not yet registered? Sign Up"/>
                <TextView
                    android:id="@+id/version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|center"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Version : 1.0"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>