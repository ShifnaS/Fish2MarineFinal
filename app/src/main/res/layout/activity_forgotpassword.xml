<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:background="#ffffff">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="30dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">
                        <ImageView
                            android:id="@+id/errorimage"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:src="@drawable/img_forgotpass" />
                        <TextView
                            style="@style/layoutmatchwrap"
                            android:text="Forgot your password?"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/f2mcolor"
                            android:layout_marginTop="10dp"
                            android:textSize="16sp" />
                        <TextView
                            style="@style/layoutmatchwrap"
                            android:text="Enter your Email/Mobile below to receive password reset information"
                            android:gravity="center"
                            android:textColor="@color/f2mcolor"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textSize="14sp" />
                        <com.smacon.f2mlibrary.CustomEditText
                            android:id="@+id/email_mobile"
                            android:lines="1"
                            android:minLines="1"
                            android:background="@drawable/commentbox_border"
                            android:maxLines="1"
                            android:padding="10dp"
                            android:textCursorDrawable="@color/black"
                            android:imeOptions="actionDone"
                            android:textColor="@color/black"
                            android:hint="Email/Phone"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_margin="30dp"
                            android:scrollbars="vertical"/>

                        <TextView
                            android:id="@+id/submit"
                            android:layout_height="40dp"
                            android:layout_width="160dp"
                            android:gravity="center"
                            android:text=" SUBMIT"
                            android:typeface="serif"
                            android:padding="7dp"
                            android:layout_marginTop="10dp"
                            android:textColor="#ffffff"
                            android:background="@color/f2mcolor"
                            android:textSize="14dp"/>
                </LinearLayout>
        </ScrollView>
        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="top|right"
            android:tint="@color/colorPrimaryDark"
            android:padding="@dimen/menupading"
            android:src="@mipmap/ic_close"/>
</FrameLayout>