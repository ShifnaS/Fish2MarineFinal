<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/f2mcolor">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/opendrawer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="@dimen/menupading"
                android:paddingBottom="@dimen/menupading"
                android:paddingRight="@dimen/menupading"
                android:src="@mipmap/ic_backarrow"/>
            <TextView
                android:id="@+id/mTitle"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:textColor="@android:color/white"
                android:textSize="@dimen/toolbartitle"/>
            <ImageView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:padding="12dp"
                android:src="@drawable/ic_location"
                android:tint="#fff"/>

            <ImageView
                android:visibility="visible"
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="4dp"
                android:tint="@color/white"
                android:src="@drawable/ic_basket"/>

            <com.smacon.f2mlibrary.Badge
                android:id="@+id/cartbadge"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_toRightOf="@id/icon"
                android:layout_alignTop="@id/icon"
                android:layout_marginLeft="-16dp"
                android:layout_marginTop="9dp"
                app:nbBackground="@drawable/badge_bg_with_shadow"
                app:nbMaxTextLength="4"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <include layout="@layout/view_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"/>

    <include layout="@layout/view_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"/>

    <include layout="@layout/view_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"/>
    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical"
        android:background="#ffffff">
        <FrameLayout
            android:id="@+id/sub_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#ffffff">
                    <RelativeLayout
                        android:id="@+id/activity_main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="235dp"
                            android:orientation="vertical"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:id="@+id/relativeLayout">
                            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/card_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:layout_marginTop="8dp"
                                android:background="@android:color/white"
                                card_view:cardCornerRadius="2dp"
                                card_view:cardElevation="2dp">
                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="235dp"
                                    android:layout_gravity="bottom">
                                    <android.support.v4.view.ViewPager
                                        android:id="@+id/viewPager"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="bottom"/>
                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="bottom">
                                        <LinearLayout
                                            android:id="@+id/SliderDots"
                                            android:layout_below="@+id/viewPager"
                                            android:orientation="horizontal"
                                            android:layout_gravity="bottom"
                                            android:gravity="center_vertical|center_horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                        </LinearLayout>
                                    </FrameLayout>
                                </FrameLayout>
                            </android.support.v7.widget.CardView>
                        </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:orientation="vertical"
                        android:id="@+id/relativeLayout1">
                    </RelativeLayout>
                        <com.smacon.f2mlibrary.Button.FloatingActionButton
                            android:id="@+id/share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_share"
                            android:layout_marginRight="12dp"
                            android:layout_marginEnd="12dp"
                            android:layout_below="@+id/relativeLayout1"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="bottom|end"
                            android:padding="8dp"
                            style="@style/MenuButtonsStyle" />
                       <!-- <android.support.design.widget.FloatingActionButton
                            android:id="@+id/fab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            app:srcCompat="@android:drawable/ic_menu_share"
                            android:layout_marginRight="12dp"
                            android:layout_marginEnd="12dp"
                            android:layout_below="@+id/relativeLayout1"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />-->
                        <LinearLayout
                            android:layout_below="@+id/share"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">
                            <TextView
                                android:id="@+id/txt_product_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="gghguyuyuuuuuyu"
                                android:textColor="@color/f2mcolor"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:layout_margin="5dp"/>
                            <TextView
                                android:id="@+id/txt_product_size"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="fishsize"
                                android:textColor="@color/f2mcolor"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:layout_margin="5dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/txt_product_code"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="hgjhjh"
                                    android:textColor="@color/colorGrayDark"
                                    android:layout_margin="5dp"
                                    android:horizontalSpacing="10dp"/>
                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/txt_product_stock"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorGrayDark"
                                    android:gravity="right"
                                    android:layout_margin="5dp"
                                    android:textSize="18dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/layout_specialPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:gravity="start"
                                    android:text="Special Price "
                                    android:textColor="@color/colorGrayDark"
                                    android:textStyle="bold" />
                                <TextView
                                    android:id="@+id/txt_product_special_price"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/f2mcolor"
                                    android:textSize="16dp"
                                    android:textStyle="bold"
                                    android:layout_margin="5dp"
                                    android:gravity="right"
                                    android:visibility="gone"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorGrayDark"
                                    android:textStyle="bold"
                                    android:layout_margin="5dp"
                                    android:textSize="18sp"
                                    android:gravity="start"
                                    android:text="Total Price "/>

                                <TextView
                                    android:textSize="18sp"
                                    android:id="@+id/txt_product_price"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/f2mcolor"
                                    android:textStyle="bold"
                                    android:layout_margin="5dp"
                                    android:gravity="end" />
                            </LinearLayout>
                            <TextView
                                android:id="@+id/choose"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold"
                                android:text="Choose Cut Type *"
                                android:textColor="#3f51b5"/>
                            <LinearLayout
                                android:layout_margin="5dp"
                                android:id="@+id/layout_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:orientation="vertical">
                                <Spinner
                                    android:id="@+id/spinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="left"
                                    android:theme="@style/Spinner"
                                    android:spinnerMode="dropdown"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="left|center"
                                android:layout_marginTop="10dp"
                                android:layout_margin="5dp"
                                android:layout_gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorGrayDark"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="start"
                                    android:textStyle="bold"
                                    android:text="Quantity"/>
                                <LinearLayout
                                    android:layout_width="150dp"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@color/f2mcolor"
                                    android:orientation="horizontal">
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:padding="5dp"
                                        android:layout_gravity="center"
                                        android:gravity="center">
                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:layout_gravity="center"
                                            android:gravity="center">
                                            <ImageView
                                                android:id="@+id/img_minus"
                                                android:background="@color/colorGrayLight"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:padding="15dp"
                                                android:gravity="center"
                                                android:src="@mipmap/ic_remove"/>
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:layout_gravity="center"
                                            android:gravity="center">
                                            <TextView
                                                android:id="@+id/txt_quantity"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:text="1"
                                                android:textColor="@color/black"
                                                android:textStyle="bold"
                                                android:background="@color/colorBackground"/>
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:layout_gravity="center"
                                            android:gravity="center">
                                            <ImageView
                                                android:id="@+id/img_plus"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@color/colorGrayLight"
                                                android:src="@mipmap/ic_add"
                                                android:padding="15dp"
                                                android:layout_gravity="center"
                                                android:gravity="center"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_gravity="left"
                                    android:layout_margin="5dp"
                                    android:gravity="left">
                                    <TextView
                                        android:id="@+id/txt_ordered_qty"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorGrayDark"
                                       />
                                    <TextView
                                        android:textStyle="bold"
                                        android:id="@+id/txt_cleaned_qty"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/colorGrayDark"
                                        android:layout_marginTop="5dp"/>
                                </LinearLayout>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/product_heading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Product Description"
                                android:gravity="left"
                                android:textColor="@color/colorGrayDark"
                                android:textStyle="bold"
                                android:layout_margin="5dp"
                                android:horizontalSpacing="10dp"/>
                            <TextView
                                android:id="@+id/txt_product_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorGray"
                                android:maxLines="8"
                                android:gravity="left"
                                android:layout_margin="5dp"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:background="@drawable/border_textview"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/ic_store"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_gravity="center"
                                    android:gravity="center">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Sold By"
                                        android:gravity="left"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorGrayDark"
                                        android:layout_margin="2dp" />
                                    <TextView
                                        android:id="@+id/txt_sold_by"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="left"
                                        android:textColor="#3f51b5"
                                    android:layout_margin="2dp" />
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="70dp">
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
            <Button
                android:id="@+id/addtocart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="ADD TO CART"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:gravity="center"
                android:background="@color/f2mcolor"/>
        </FrameLayout>
    </FrameLayout>
</FrameLayout>