<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:background="@color/colorBackground">

    <TextView
        android:id="@+id/txt_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:textSize="@dimen/heading_size"
        android:textColor="@color/colorGrayDark"
        android:text="Add address"
        android:textAllCaps="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:drawable/divider_horizontal_bright" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txt_input_fname_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintAnimationEnabled="true"
                android:textColorHint="@color/colorPrimary"
                android:hint="First name *">

                <com.smacon.f2mlibrary.CustomEditText
                    android:id="@+id/edt_fname_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrayDark"
                    android:textSize="@dimen/normal_text_size"
                    android:textColorHint="@color/colorGray"
                    android:maxLines="1"
                    android:inputType="textCapWords"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txt_input_lname_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintAnimationEnabled="true"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/colorPrimary"
                android:hint="Last name *">

                <com.smacon.f2mlibrary.CustomEditText
                    android:id="@+id/edt_lname_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrayDark"
                    android:textSize="@dimen/normal_text_size"
                    android:textColorHint="@color/colorGray"
                    android:maxLines="1"
                    android:inputType="textCapWords"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txt_input_company_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintAnimationEnabled="true"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/colorPrimary"
                android:hint="Company">

                <com.smacon.f2mlibrary.CustomEditText
                    android:id="@+id/edt_company_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrayDark"
                    android:textSize="@dimen/normal_text_size"
                    android:textColorHint="@color/colorGray"
                    android:maxLines="1"
                    android:inputType="textCapWords"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txt_input_phone_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintAnimationEnabled="true"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/colorPrimary"
                android:hint="Phone *">

                <com.smacon.f2mlibrary.CustomEditText
                    android:id="@+id/edt_phone_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrayDark"
                    android:textSize="@dimen/normal_text_size"
                    android:textColorHint="@color/colorGray"
                    android:maxLines="1"
                    android:inputType="phone"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txt_input_add1_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintAnimationEnabled="true"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/colorPrimary"
                android:hint="Address Line 1 *">

                <com.smacon.f2mlibrary.CustomEditText
                    android:id="@+id/edt_add1_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrayDark"
                    android:textSize="@dimen/normal_text_size"
                    android:textColorHint="@color/colorGray"
                    android:inputType="textCapSentences"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txt_input_add2_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintAnimationEnabled="true"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/colorPrimary"
                android:hint="Address Line 2">

                <com.smacon.f2mlibrary.CustomEditText
                    android:id="@+id/edt_add2_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrayDark"
                    android:textSize="@dimen/normal_text_size"
                    android:textColorHint="@color/colorGray"
                    android:maxLines="1"
                    android:inputType="textCapSentences"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txt_input_city_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintAnimationEnabled="true"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/colorPrimary"
                android:hint="City *">

                <com.smacon.f2mlibrary.CustomEditText
                    android:id="@+id/edt_city_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrayDark"
                    android:textSize="@dimen/normal_text_size"
                    android:textColorHint="@color/colorGray"
                    android:maxLines="1"
                    android:inputType="textCapWords"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txt_input_state_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:hintAnimationEnabled="true"
                android:textColorHint="@color/colorPrimary"
                android:hint="State / Province">

                <com.smacon.f2mlibrary.CustomEditText
                    android:id="@+id/edt_state_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrayDark"
                    android:textSize="@dimen/normal_text_size"
                    android:text="Kerala"
                    android:focusable="false"
                    android:clickable="false"
                    android:textColorHint="@color/colorGray"
                    android:maxLines="1"
                    android:inputType="textCapSentences"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txt_input_zip_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintAnimationEnabled="true"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/colorPrimary"
                android:hint="Zip / Postal Code *">

                <com.smacon.f2mlibrary.CustomEditText
                    android:id="@+id/edt_zip_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrayDark"
                    android:textSize="@dimen/normal_text_size"
                    android:textColorHint="@color/colorGray"
                    android:maxLines="1"
                    android:inputType="number"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txt_input_country_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintAnimationEnabled="true"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/colorPrimary"
                android:hint="Country *">

                <com.smacon.f2mlibrary.CustomEditText
                    android:id="@+id/edt_country_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrayDark"
                    android:textSize="@dimen/normal_text_size"
                    android:textColorHint="@color/colorGray"
                    android:maxLines="1"
                    android:text="India"
                    android:inputType="textCapSentences"
                    android:focusable="false"
                    android:clickable="false"/>

            </android.support.design.widget.TextInputLayout>

            <com.smacon.f2mlibrary.CustomCheckBox
                android:id="@+id/chk_default_shipping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/f2mcolor"
                android:textSize="@dimen/normal_text_size"
                android:text="Set as default shipping address"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_margin="@dimen/padding_small"/>

        </LinearLayout>

    </ScrollView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:gravity="center">
        <Button
            android:id="@+id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_margin="@dimen/padding_small"
            android:text="Add"
            android:background="@color/f2mcolor"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_text_size"/>
        <com.smacon.f2mlibrary.Progress.AVLoadingIndicatorView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/indicator"
            app:indicator="BallGridPulse"
            android:visibility="gone"
            app:indicator_color="@color/f2mcolor"
            android:layout_gravity="center"
            android:gravity="center">
        </com.smacon.f2mlibrary.Progress.AVLoadingIndicatorView>
    </FrameLayout>
</LinearLayout>